<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:menu="@menu/menu_editor"
            app:navigationIcon="@drawable/ic_editor_exit" />

        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/grid_step_2"
            android:layout_marginTop="@dimen/grid_step_vertical_1"
            android:layout_marginBottom="@dimen/grid_step_vertical_2"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Длинное название курса, которое умещается только в две строки"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timeline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#fff"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/bottomMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        tools:itemCount="2"
        tools:listitem="@layout/item_timeline_image"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/bottomMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <TextView
            android:id="@+id/emptyViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/editor_empty_view_text"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/emptyViewAddVideoButton"
            android:layout_width="@dimen/square_button_small"
            android:layout_height="@dimen/square_button_small"
            android:layout_marginEnd="@dimen/grid_step_2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_add_video"
            android:text="Video"
            app:layout_constraintEnd_toStartOf="@id/emptyViewAddImageButton"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emptyViewTitle" />

        <Button
            android:id="@+id/emptyViewAddImageButton"
            android:layout_width="@dimen/square_button_small"
            android:layout_height="@dimen/square_button_small"
            android:layout_marginHorizontal="@dimen/grid_step_vertical_4"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_add_image"
            android:text="Image"
            app:layout_constraintEnd_toStartOf="@id/emptyViewAddQuizButton"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/emptyViewAddVideoButton"
            app:layout_constraintTop_toBottomOf="@id/emptyViewTitle" />

        <Button
            android:id="@+id/emptyViewAddQuizButton"
            android:layout_width="@dimen/square_button_small"
            android:layout_height="@dimen/square_button_small"
            android:layout_marginStart="@dimen/grid_step_2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_add_quiz"
            android:text="Quiz"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/emptyViewAddImageButton"
            app:layout_constraintTop_toBottomOf="@id/emptyViewTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/grid_margin"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/addVideoButton"
                android:layout_width="@dimen/square_button_small"
                android:layout_height="@dimen/square_button_small"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_add_video" />

            <ImageButton
                android:id="@+id/addImageButton"
                android:layout_width="@dimen/square_button_small"
                android:layout_height="@dimen/square_button_small"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_add_image" />

            <ImageButton
                android:id="@+id/addQuizButton"
                android:layout_width="@dimen/square_button_small"
                android:layout_height="@dimen/square_button_small"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_add_quiz" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="@dimen/square_button_small"
            android:layout_height="@dimen/square_button_small"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/grid_step_2"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_editor_settings" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
